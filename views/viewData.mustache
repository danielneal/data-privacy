<html class="h-full">
  <head>
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <link href="{{siteRoot}}/css/compiled.css" rel="stylesheet">
  </head>
  <body class="bg-gradient-to-br from-yellow-400 via-orange-500 to-pink-500 w-full h-full">
      <div class="flex flex-col items-stretch sm:items-center p-3">
        <a href="/" class="text-center text-xl font-bold mb-3">{{pageTitle}}</a>
        <div class="sm:w-1/2 flex flex-col items-stretch">
          <label class="text-sm mb-1">Shared information</label>
          <div class="bg-white rounded p-3 mb-3">
            <p class="text-sm whitespace-pre-wrap">{{data}}</p>
          </div>
          <form class="flex flex-col items-end" action="/deleteData" method="post">
            <input type="hidden" name="id" value="{{id}}"/>
            <button class="hover:bg-blue-700 text-white text-bold bg-blue-900 px-3 py-1 rounded" type="submit">Delete</button>
          </form>
        </div>
      </div>
   </body>
</html>
